<%- include("../include/head.ejs") %>

<body class="leading-normal tracking-normal text-white gradient">
    <%- include("../include/nav.ejs") %>

    <section class="bg-white border-b py-8 mt-10">
        <div class="flex flex-col w-full flex-wrap">
            <h1 class="w-full my-2 text-5xl font-bold leading-tight text-center text-gray-800">
                <%= guild.name %> - Plugins
            </h1>
            <div class="w-full mb-4">
                <div class="h-1 mx-auto gradient w-64 opacity-25 my-0 py-0 rounded-t"></div>
            </div>
            <% const plugins = [{ name: "config", icon: "https://upload.wikimedia.org/wikipedia/commons/thumb/0/0b/Gear_icon_svg.svg/1200px-Gear_icon_svg.svg.png" }]; %>
            <div class="flex flex-wrap">
                <% plugins.forEach(plugin => { %>
                    <%- include("../include/card.ejs", {
                        imageURL: plugin.icon ,
                        cardTitle: bot.utils.properCase(plugin.name),
                        buttonURL: `/dashboard/${guild.id}/${plugin.name}`
                    }) %>
                <% }) %>
            </div>    
        </div>
    </section>
    <%- include("../include/wave.ejs") %>
    <%- include("../include/footer.ejs") %>
</body>
</html>