<%- include("../include/head.ejs") %>

<body class="leading-normal tracking-normal text-white gradient">
    <%- include("../include/nav.ejs") %>

    <section class="bg-white border-b py-8 mt-10">
        <% const guilds = user.guilds.filter(m => m.permissions.includes("MANAGE_GUILD")); %>

        <div class="flex flex-col w-full flex-wrap">
            <h1 class="w-full my-2 text-5xl font-bold leading-tight text-center text-gray-800">
                Select a server
            </h1>
            <div class="w-full mb-4">
                <div class="h-1 mx-auto gradient w-64 opacity-25 my-0 py-0 rounded-t"></div>
            </div>
        
            <div class="flex flex-wrap">
                <% guilds.forEach(guild => { %>
                    <%- include("../include/card.ejs", {
                        imageURL: guild.iconURL ? `${guild.iconURL}?size=2048` : `https://cdn.discordapp.com/embed/avatars/0.png?size=2048`,
                        cardTitle: guild.name,
                        buttonURL: `/dashboard/${guild.id}`
                    }) %>
                <% }) %>
            </div>
        </div>
    </section>
    <%- include("../include/wave.ejs") %>
    <%- include("../include/footer.ejs") %>
</body>
</html>